1.)select cid,dates,total_cost from time1 where month(dates)=1 order by total_cost desc limit 1;
2.)select cid,dates,total_cost from time1 where month(dates)=2 order by total_cost desc limit 1;
3.)select cid,dates,total_cost from time1 where month(dates)=11 order by total_cost desc limit 1;
4.)select cid,dates,total_cost from time1 where month(dates)=12 order by total_cost desc limit 1;

